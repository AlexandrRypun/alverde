<div class="shop hover-style mb-30">
    <div class="shop-img">
        <LinkTo @route="products.product" @model={{product}}>
            <img src={{product.mainImg}} alt={{translate product "name"}}>
        </LinkTo>
        <div class="shop-title title-style-1">
            <h3><LinkTo @route="products.product" @model={{product}}>{{translate product "name"}}</LinkTo></h3>
            <span class="new-price">{{hryvna-price product.price}}</span>
            {{#if product.oldPrice}}
                <span class="old-price">{{hryvna-price product.oldPrice}}</span>
            {{/if}}
        </div>
        <div class="product-cart">
            <a href="#" title={{t "products.addToCart"}} {{action "addToCart" product on="click"}}><i class="pe-7s-cart"></i></a>
        </div>
    </div>
</div>
