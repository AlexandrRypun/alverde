<li>
    <a href="#" {{action "showLoginModal"}}><i class="pe-7s-add-user"></i></a>
    {{#if this.session.isAuthenticated}}
        <ul>
            <li>
                <LinkTo @route="profile">{{t "login.profile" firstName=this.session.data.authenticated.tokenData.firstName}}</LinkTo>
            </li>
            <li><a href="#" {{action "logout"}}>{{t "login.logout"}}</a></li>
        </ul>
    {{else}}
        <ModalWindow @modalId="loginModal" @showModal={{showModal}}>
            {{#let (component "field-with-validation/input") as |InputWithValidation|}}
                {{#if registration}}
                    <div class="registration">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>{{t "registration.header"}}</h2>
                            </div>
                            <div class="login-form">
                                <form {{action "registerUser" on="submit"}}>
                                    <InputWithValidation
                                            @model={{newUser}}
                                            @name="firstName"
                                            @value={{newUser.firstName}}
                                            @onChange={{action "onAttrChanged"}}
                                            @placeholder={{t "registration.placeholder.firstName"}}
                                    />
                                    <InputWithValidation
                                            @model={{newUser}}
                                            @name="lastName"
                                            @value={{newUser.lastName}}
                                            @onChange={{action "onAttrChanged"}}
                                            @placeholder={{t "registration.placeholder.lastName"}}
                                    />
                                    <InputWithValidation
                                            @model={{newUser}}
                                            @name="email"
                                            @value={{newUser.email}}
                                            @onChange={{action "onAttrChanged"}}
                                            @placeholder={{t "registration.placeholder.email"}}
                                    />
                                    <InputWithValidation
                                            @type="password"
                                            @model={{newUser}}
                                            @name="password"
                                            @value={{newUser.password}}
                                            @onChange={{action "onAttrChanged"}}
                                            @placeholder={{t "registration.placeholder.password"}}
                                    />
                                    <div class="button-box">
                                        <button type="submit" class="default-btn floatright">{{t "registration.submit"}}</button>
                                        <a href="#" class="button-link" {{action "showLogin"}}>{{t "registration.toLogin"}}</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {{else}}
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>{{t "login.header"}}</h2>
                                <span>{{t "login.loginDesc"}}</span>
                            </div>
                            <div class="login-form">
                                <form {{action "login" on="submit"}}>
                                    <InputWithValidation
                                            @model={{newUser}}
                                            @name="email"
                                            @value={{newUser.email}}
                                            @placeholder={{t "registration.placeholder.email"}}
                                    />
                                    <InputWithValidation
                                            @type="password"
                                            @model={{newUser}}
                                            @name="password"
                                            @value={{newUser.password}}
                                            @placeholder={{t "registration.placeholder.password"}}
                                    />
                                    <div class="button-box">
                                        <div class="login-toggle-btn" style="display: none;">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">{{t "login.rememberMe"}}</label>
                                            <a href="#">{{t "login.forgotPassword"}}</a>
                                        </div>
                                        <button type="submit" class="default-btn floatright">{{t "login.submit"}}</button>
                                        <a href="#" class="button-link" {{action "showRegistration"}}>{{t "login.toSignUp"}}</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/let}}
        </ModalWindow>
    {{/if}}
</li>
