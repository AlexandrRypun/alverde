<div class="container-fluid">
    <div class="row mb-40">
        <div class="col-md-5 col-sm-6 col-xs-12 mb-40">
            <div class="tab-content mb-10">
                {{#each product.images as |image|}}
                    <div class="pro-large-img tab-pane {{if image.main "active"}}" id="pro-large-img-{{image.id}}">
                        <img src={{image.src}} alt="">
                    </div>
                {{/each}}
            </div>
            <div class="pro-thumb-img-slider">
                {{#each product.images as |image|}}
                    <div><a href="#pro-large-img-{{image.id}}" data-toggle="tab"><img src={{image.src}} alt=""></a></div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-7 col-sm-6 col-xs-12 mb-40">
            <div class="product-details section">
                <h1 class="title">{{translate product "name"}}</h1>
                <div class="price-ratting section">
                    <span class="price float-left"><span class="new">{{hryvna-price product.price}}</span></span>
                </div>
                <div class="short-desc section">
                    <h5 class="pd-sub-title">{{t "product.shortDesc"}}</h5>
                    <p>{{translate product "description"}}</p>
                </div>
                <div class="quantity-cart section">
                    <button class="add-to-cart" {{action "addToCart" product on="click"}}>{{t "products.addToCart"}}</button>
                    {{#if product.cartQuantity}}
                        <div class="already-in-cart">{{product.cartQuantity}} {{t "product.inCart"}}</div>
                    {{/if}}
                </div>
                <div class="share-icons section">
                    <span>{{t "product.share"}}:</span>
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-instagram"></i></a>
                    <a href="#"><i class="fa fa-pinterest"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ul class="pro-info-tab-list section">
                <li class="active"><a href="#more-info" data-toggle="tab">{{t "product.moreInfo"}}</a></li>
            </ul>
        </div>
        <div class="tab-content col-xs-12">
            <div class="pro-info-tab tab-pane active" id="more-info">
                <p>{{translate product "description"}}</p>
            </div>
        </div>
    </div>
</div>
