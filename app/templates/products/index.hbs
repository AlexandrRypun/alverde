<ProductsCategories @selectedCategoryId={{category}} />
<div class="section-padding-100 clearfix amado_product_area">
    {{#each this.model as |productsRow|}}
        <div class="row">
            {{#each productsRow as |product|}}
                {{#let (component 'product/product-teaser') as |ProductTeaser|}}
                    <ProductTeaser @product={{product}} />
                {{/let}}
            {{/each}}
        </div>
    {{else}}
        There are no products in selected category
    {{/each}}
</div>

