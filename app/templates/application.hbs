<div class="waraper">
    <header>
        <div class="header-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 col-lg-3  col-sm-4 col-xs-4">
                        <div class="logo">
                            <LinkTo @route="index"><img src="/assets/img/logo/logo.png" alt=""></LinkTo>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-2 col-xs-2 text-center">
                        <MainMenu @categories={{this.model.categories}}/>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xs-6 col-sm-6 text-right text-sm text-res">
                        <div class="cart-user-language">
                            <div class="shopping-cart ml-30">
                                <LinkTo @route="cart" class="top-cart">{{this.cartProductsQty}}<i class="pe-7s-cart"></i></LinkTo>
                            </div>
                            <div class="user">
                                <a href="#" data-toggle="modal" data-target="#loginModal"><i class="pe-7s-add-user"></i></a>
                            </div>
                            <div class="language-menu none">
                                <LanguageToggle />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mobile-menu"></div>
            </div>
        </div>
    </header>
    {{outlet}}
    <footer class="footer-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 col-sm-5">
                    <div class="footer-logo">
                        <a href="#"><img src="/assets/img/logo/logo.png" alt=""></a>
                        <p>{{t "logoDesc"}}</p>
                        <ul>
                            <li><a href="https://www.facebook.com/devitems/?ref=bookmarks"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="https://twitter.com/devitemsllc"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.google.com/"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="https://www.linkedin.com/"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="https://www.instagram.com/devitems/"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-7 col-sm-7">
                </div>
                <div class="col-md-3 col-sm-12">
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="footer-bottom text-center ptb-20">
                {{t "footerSignature"}}
            </div>
        </div>
    </footer>
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label={{t "login.close"}}><span aria-hidden="true">{{t "closeSign"}}</span></button>
                </div>
                <div class="modal-body">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>{{t "login.header"}}</h2>
                                <span>{{t "login.loginDesc"}}</span>
                            </div>
                            <div class="login-form">
                                <form action="#" method="post">
                                    <input type="text" name="user-name" placeholder={{t "login.placeholder.username"}}>
                                    <input type="password" name="user-password" placeholder={{t "login.placeholder.password"}}>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">{{t "login.rememberMe"}}</label>
                                            <a href="#">{{t "login.forgotPassword"}}</a>
                                        </div>
                                        <button type="submit" class="default-btn floatright">{{t "login.submit"}}</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="notification-container">
    {{notification-container position="top"}}
</div>

